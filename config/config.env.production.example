# Production Configuration Example
# Скопируйте этот файл в config.env и заполните реальными значениями

# API Keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# JWT Security
# СГЕНЕРИРУЙТЕ НОВЫЙ КЛЮЧ ДЛЯ PRODUCTION!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERATE-NEW-SECRET-KEY-FOR-PRODUCTION

# Database Configuration
# Для MySQL (production):
DATABASE_URL=mysql+pymysql://user:STRONG_PASSWORD@localhost/audio_store

# Service Ports
CATALOG_PORT=8000
AUTH_PORT=8001
ORDERS_PORT=8010
USERS_PORT=8011
RECOMMENDER_PORT=8012
CART_PORT=8005
PROMPTS_MANAGER_PORT=8007

# Service URLs (для межсервисных вызовов)
# Замените на реальные домены для production
CATALOG_SERVICE_URL=https://yourdomain.com:8000
AUTH_SERVICE_URL=https://yourdomain.com:8001
ORDERS_SERVICE_URL=https://yourdomain.com:8010
USERS_SERVICE_URL=https://yourdomain.com:8011
RECOMMENDER_SERVICE_URL=https://yourdomain.com:8012
CART_SERVICE_URL=https://yourdomain.com:8005
PROMPTS_MANAGER_SERVICE_URL=https://yourdomain.com:8007

# CORS Configuration
# ВАЖНО: Укажите конкретные домены для production (не используйте *)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
# ДЛЯ PRODUCTION установите production
ENVIRONMENT=production

# Admin Credentials
# ВАЖНО: Измените на безопасные значения для production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_COPY_TO=your-email@gmail.com

